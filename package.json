{
  "name": "express-starter",
  "version": "1.0.0",
  "description": "Serverless template",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "configure": "cp .env.example .env",
    "dev": "nodemon",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "lint": "eslint --ext .js,.ts .",
    "migrate": "npx dotenv-run-script .env typeorm migration:run -- -d src/config/database/data-source.ts",
    "revert-migration": "npx dotenv-run-script .env typeorm migration:revert -- -d src/config/database/data-source.ts",
    "prepare-husky": "husky install",
    "typeorm": "npx typeorm-ts-node-esm",
    "jest": "jest",
    "test": "npx dotenv-run-script .env jest -- --collectCoverage --passWithNoTests",
    "test:watch": "npx dotenv-run-script .env jest -- --collectCoverage --watch",
    "test:watchAll": "npx dotenv-run-script .env jest -- --collectCoverage --watchAll",
    "test:staged": "npx dotenv-run-script .env jest --passWithNoTests",
    "watch": "tsc -w"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "mysql2": "^3.5.2",
    "nodemailer": "^6.9.4",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@aws-sdk/client-sqs": "^3.370.0",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@types/aws-lambda": "^8.10.119",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.2",
    "@types/nodemailer": "^6.4.8",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-run-script": "^0.3.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
